@page "/Article/Index"
@using Core.Enums
@model Presentation.Pages.Article.IndexModel
@{
    ViewData["Title"] = "Article Management";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="mx-5 mt-5">
    <h2 class="mb-5 text-center">Article Management</h2>

    <!-- 🔍 FILTER FORM -->
    <form id="search-form" method="get" class="row g-3 align-items-end bg-light mb-4 rounded p-3 shadow-sm">

        <!-- 🔸 Title -->
        <div class="col-md-3">
            <input type="text" class="form-control" name="Title"
                   asp-for="SearchParams.Title"
                   placeholder="Search by title..." />
        </div>

        <!-- 🔸 Author -->
        <div class="col-md-3">
            <input type="text" class="form-control" name="Author"
                   asp-for="SearchParams.Author"
                   placeholder="Search by author..." />
        </div>

        <div class="col-md-3">
            <select class="form-select category-select" asp-for="SearchParams.Category" name="Category"
                    data-placeholder="Select category">
                <option value="" selected="@Model.SearchParams.Category == null">All categories</option>
                @foreach (var category in Model.Categories) {
                    <option value="@category.Name" selected="@(Model.SearchParams.Category == category.Name)">@category.Name</option>
                }
            </select>
        </div>

        <!-- 🔸 Status -->
        <div class="col-md-3">
            <select class="form-select" asp-for="SearchParams.Status" name="Status" data-placeholder="Select status">
                <option value="">All status</option>
                <option value="@(Status.Active)">@(Status.Active)</option>
                <option value="@(Status.Inactive)">@(Status.Inactive)</option>
            </select>
        </div>

        <!-- 🔸 Date range -->
        <div class="col-md-3">
            <input type="date" class="form-control" asp-for="SearchParams.StartDate" name="StartDate"
                   placeholder="From date" />
        </div>
        <div class="col-md-3">
            <input type="date" class="form-control" asp-for="SearchParams.EndDate" name="EndDate"
                   placeholder="To date" />
        </div>

        <!-- 🔸 Buttons -->
        <div class="col-md-6 d-flex justify-content-md-end gap-2">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Search Articles">
                <i class="bi bi-search"></i><span>Search</span>
            </button>
            <button id="reset-btn" type="button" class="btn btn-secondary d-flex align-items-center gap-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Reset Filter">
                <i class="bi bi-arrow-clockwise"></i><span>Reset</span>
            </button>
            <button type="button" class="btn btn-success d-flex align-items-center gap-2" data-bs-toggle="modal"
                    data-bs-target="#modal" data-action-type="@(ActionType.Create)" title="Create New Article">
                <i class="bi bi-plus-circle"></i><span>Create</span>
            </button>
        </div>
    </form>

    <!-- 🔸 TABLE -->
    <div class="table-responsive shadow-sm" id="article-table-container"></div>

    <!-- 🔸 MODAL -->
    <div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
         aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="article-form" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-submit"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/article.js"></script>

    <script>
        $(function () {
            $('.category-select').select2({
                placeholder: "Select category",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
