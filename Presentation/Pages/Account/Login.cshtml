@page "/Account/Login"
@model Presentation.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="d-flex flex-column justify-content-center align-items-center vh-100 container">
    @* <h1 class="mb-5">FUNewsManagementSystem</h1> *@
    <div class="card p-4 shadow-lg" style="width: 380px; border-radius: 15px;">
        <h4 class="mb-4 text-center">Login</h4>

        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="email">Email address<span class="text-danger">*</span></label>
                <input asp-for="LoginParams.Email" id="email" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="LoginParams.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password<span class="text-danger">*</span></label>
                <input asp-for="LoginParams.Password" id="password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="LoginParams.Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="mt-3 text-center">
                <a asp-pagee="/Index">Back to Home</a>
            </div>
        </form>
    </div>
</div>
